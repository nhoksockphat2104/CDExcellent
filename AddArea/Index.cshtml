@model IEnumerable<CDExcellent.Models.AddArea>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboardAdmin.cshtml";
}

<h2>Quản lý khu vực</h2>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-4">
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Import", "AddArea")" class="btn btn-sm btn-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                    </svg> Import
                </a>
                <a href="@Url.Action("Create", "AddArea")" class="btn btn-sm btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg> Thêm
                </a>
            </div>
        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-bordered table-hover"> 
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center"><input type="checkbox" name="checkId" /></th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.AreaCode)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.AreaName)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.DistributorQty)</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20px" class="text-center"><input type="checkbox" name="checkId" /></td>
                    <td class="text-center"><p>COD @Html.DisplayFor(modelItem => item.AreaCode)</p></td>
                    <td class="text-center"><a href="@Url.Action("Details", "AddArea", new { id = item.AreaId})">@Html.DisplayFor(modelItem => item.AreaName)</a></td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.DistributorQty)</td>
                    <td class="text-center">
                        <a href="@Url.Action("Create", "AddNewUser")">Add User</a>
                        <a href="@Url.Action("Create", "AddDistributor")">Add Distributor</a>
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "AddArea", new { @id = item.AreaId})" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "AddArea", new { @id = item.AreaId})" class="btn btn-sm btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

