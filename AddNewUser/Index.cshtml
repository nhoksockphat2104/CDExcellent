@model IEnumerable<CDExcellent.Models.AddNewUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboardAdmin.cshtml";
}

<h2>Quản lý người dùng</h2>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-4">
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Import", "AddNewUser")" class="btn btn-group-sm btn-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                    </svg> Import
                </a>
                <a href="@Url.Action("Create", "AddNewUser")" class="btn btn-group-sm btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg> Create
                </a>
            </div>
        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center"><input type="checkbox" name="checkId" /></th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Title)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Area)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.ReportTo)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Status)</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" name="checkId" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-center">
                        @if (item.Title == 1)
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>VPCD</p>
                        }
                        else if (item.Title == 2)
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>BM</p>
                        }
                        else if (item.Title == 3)
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>ASM</p>
                        }
                        else if (item.Title == 4)
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>CE</p>
                        }
                        else if (item.Title == 5)
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>Sale Sup</p>
                        }
                        else
                        {
                            <p @Url.Action("Title", "AddNewUser", new { @id = item.Title })>Distributor</p>
                        }
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td class="text-center">
                        @if (item.ReportTo == 1)
                        {
                            <p @Url.Action("ReportTo", "AddNewUser", new { @id = item.ReportTo })>Hoàng Văn Phát</p>
                        }
                        else if (item.ReportTo == 2)
                        {
                            <p @Url.Action("ReportTo", "AddNewUser", new { @id = item.ReportTo })>Nguyễn Văn A</p>
                        }
                        else
                        {
                            <p @Url.Action("ReportTo", "AddNewUser", new { @id = item.ReportTo })>Trần Hoàng B</p>
                        }
                    </td>
                    <td class="text-center">
                        @if (item.Status == 1)
                        {
                            <p @Url.Action("Status", "AddNewUser", new { @id = item.Status })>Active</p>

                        }
                        else
                        {
                            <p @Url.Action("Status", "AddNewUser", new { @id = item.Status })>Inactive</p>
                        }

                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "AddNewUser", new { @id = item.Id})" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Details", "AddNewUser", new { @id = item.Id})" class="btn btn-sm btn-primary">Details</a>
                        <a href="@Url.Action("Delete", "AddNewUser", new { @id = item.Id})" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

