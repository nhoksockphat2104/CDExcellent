@model IEnumerable<CDExcellent.Models.CreateNotification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboardAdmin.cshtml";
}

<h2 class="container-md">Notifications List</h2>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb container-md">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "DashboardAdmin")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("TableList", "CreateNotification")">Thông báo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Notification List</li>
    </ol>
</nav>
<div class="container-md">
    <form class="d-flex mt-3" role="search">
        <input class="form-control me-2 rounded-pill" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success rounded-pill" type="submit">Search</button>
    </form>
</div>

<div class="card mt-4">
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center"><input type="checkbox" name="checkId" /></th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Staff)</th>
                    <th>@Html.DisplayNameFor(model => model.Note)</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20px;" class="text-center"><input type="checkbox" name="checkId" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Staff)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "CreateNotification", new { id = item.Id})" class="btn btn-sm btn-danger">Delete</a>
                        <a href="@Url.Action("Details", "CreateNotification", new { id = item.Id})" class="btn btn-sm btn-primary">Details</a>
                        <a href="@Url.Action("Edit", "CreateNotification", new { id = item.Id})" class="btn btn-sm btn-warning">Edit</a>                       
                    </td>
                </tr>
            }
        </table>
    </div>
</div>