
@{
    ViewBag.Title = "ForgetPass";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div style="margin-left:500px; margin-right:500px" class="text-center">
    <img src="~/Public/Img/1.png" alt="CDExcellent" width="150" height="150">
    <h4 class="mt-3">Forget Password</h4>
    <hr />
    <form>
        <div class="mb-3">
            <p>Vui lòng nhập Email để khôi phục lại mật khẩu</p>
            <input type="email" class="form-control rounded-pill position-relative top-50 start-50 translate-middle" />
        </div>
        <button type="submit" class="btn btn-primary mb-3 m-2">Submit</button>
        <a href="@Url.Action("SignIn", "Dashboard")" class="btn btn-secondary mb-3 m-2">Quay lại</a>
    </form>
</div>

